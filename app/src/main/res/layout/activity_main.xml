<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/inder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="110dp"
        android:textColor="@android:color/background_light"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bplus"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#c8f6ee10"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bminus"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#c8f6ee10"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bmul"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#c8f6ee10"
            android:text="*"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bdiv"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="#c8f6ee10"
            android:text="/"
            android:textSize="30sp" />

        <Button
            android:id="@+id/beq"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="="
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <Button
            android:id="@+id/bone"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btwo"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bthree"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="30sp" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bfour"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bfive"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bsix"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bseven"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/beight"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bnine"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <Button
            android:id="@+id/br"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="#7dff4444"
            android:text="RST"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bzero"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bd"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="#7dff4444"
            android:text="DEL"
            android:textSize="30sp" />


    </LinearLayout>


    </LinearLayout>

