<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/inder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="165dp"
        android:layout_marginTop="110dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="5dp"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:layout_marginRight="5dp"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:layout_marginRight="5dp"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="*"
            android:textSize="30sp" />

        <Button
            android:layout_marginRight="5dp"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="/"
            android:textSize="30sp" />

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:background="#c8f6ee10"
            android:text="="
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="30sp"/>
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="30sp"/>
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="30sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="#7dff4444"
            android:text="RST"
            android:textSize="30sp" />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="#7dff4444"
            android:text="DEL"
            android:textSize="30sp" />


    </LinearLayout>


    </LinearLayout>

